<?xml version="1.0" encoding="UTF-8"?>

<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
   xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
   http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
   
    <persistence-unit name="shop" transaction-type="RESOURCE_LOCAL">
	    <description>shop</description>
	    <provider>org.hibernate.ejb.HibernatePersistence</provider>
   		
      	<class>com.shop.bean.customer.CustomerEntity</class>
 		<class>com.shop.bean.orders.OrderEntity</class>
 		<class>com.shop.bean.orders.BucketEntity</class>
 		<class>com.shop.bean.currency.CurrencyEntity</class>
 		<class>com.shop.bean.products.ProductEntiry</class>
 		
         <properties>
         
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/internet_shop"/>
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="1111" />

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.temp.use_jdbc_metadata_defaults" value="false"/>
            <property name="hibernate.format_sql" value="false"/>
            <property name="hibernate.use_sql_comments" value="false"/>
            
        </properties>
    </persistence-unit>
</persistence>